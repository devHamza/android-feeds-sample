<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/half_small_spacing"
    android:layout_marginBottom="@dimen/half_normal_spacing"
    android:layout_marginTop="@dimen/half_normal_spacing">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/small_spacing">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_margin="@dimen/half_normal_spacing"
                    android:scaleType="centerInside"
                    android:background="@color/colorPrimary"
                    android:layout_width="@dimen/candidat_image_size"
                    android:layout_height="@dimen/candidat_image_size"
                    android:id="@+id/item_image"/>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/half_normal_spacing"
                    android:orientation="vertical">
                    <TextView
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/title_text"
                        android:text="Mcdonald Gordon"
                        android:id="@+id/item_title" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/normal_text"
                        android:paddingTop="@dimen/small_spacing"
                        android:text="Proident ut"
                        android:id="@+id/item_subtitle" />
                    <TextView
                        android:id="@+id/item_age_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/normal_text"
                        android:text="-------"
                         />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:padding="@dimen/half_small_spacing"
                android:background="@drawable/bg_border_radius"
                android:textStyle="bold"
                android:textColor="@color/cardview_light_background"
                android:layout_marginRight="@dimen/half_normal_spacing"
                android:layout_marginEnd="@dimen/half_normal_spacing"
                android:text="Ex: 4 an(s)"
                android:id="@+id/item_exp" />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/really_small_spacing"
            android:background="@color/gray_light"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/normal_spacing">
            <ImageView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_thumb_up_black_24dp"
                android:tint="@color/gray"
                android:id="@+id/thumb_up" />
            <TextView
                android:id="@+id/recommander_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:text="Recommander (39)"
                android:paddingLeft="@dimen/half_normal_spacing"
                android:layout_alignBottom="@+id/thumb_up"
                android:layout_toRightOf="@+id/thumb_up"
                android:layout_toEndOf="@+id/thumb_up" />
            <TextView
                android:id="@+id/contact_tv"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact"
                android:paddingLeft="@dimen/normal_spacing"
                android:textColor="@color/colorAccent"
                android:layout_alignBottom="@+id/thumb_up"
                android:layout_toRightOf="@+id/recommander_tv"
                android:layout_toEndOf="@+id/recommander_tv" />
        </RelativeLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>