<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/half_small_spacing"
    android:layout_marginBottom="@dimen/half_normal_spacing"
    android:layout_marginTop="@dimen/half_normal_spacing">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginRight="@dimen/half_normal_spacing"
                    android:scaleType="centerInside"
                    android:background="@color/colorPrimary"
                    android:layout_width="@dimen/job_image_size"
                    android:layout_height="@dimen/job_image_size"
                    android:id="@+id/job_image" />
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dip"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/half_normal_spacing"
                        android:orientation="vertical">
                        <TextView
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/title_text"
                            android:text="Mcdonald Gordon"
                            android:id="@+id/job_title" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/normal_text"
                            android:paddingTop="@dimen/small_spacing"
                            android:text="Proident ut"
                            android:id="@+id/job_subtitle" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:paddingBottom="@dimen/half_normal_spacing">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/small_text"
                            android:text="Posté le : 29 Fevrié 2016"
                            android:id="@+id/job_date" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:paddingRight="@dimen/half_normal_spacing"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="@dimen/action_ic_size"
                                android:layout_height="@dimen/action_ic_size"
                                android:paddingRight="@dimen/half_small_spacing"
                                android:src="@drawable/ic_visibility_black_24dp"/>
                            <TextView
                                android:id="@+id/job_views_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/small_text"
                                android:paddingRight="@dimen/half_small_spacing"
                                android:paddingEnd="@dimen/half_small_spacing"
                                android:text="111" />
                            <ImageView
                                android:layout_width="@dimen/action_ic_size"
                                android:layout_height="@dimen/action_ic_size"
                                android:paddingRight="@dimen/half_small_spacing"
                                android:src="@drawable/ic_group_black_24dp"/>
                            <TextView
                                android:id="@+id/job_users_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/small_text"
                                android:text="23" />
                        </LinearLayout>
                    </RelativeLayout>

                </RelativeLayout>


            </LinearLayout>

</android.support.v7.widget.CardView>